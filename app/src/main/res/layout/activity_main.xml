<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/calc_background_dark"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/teclado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btn0"
            style="@style/CalculatorButton.Number"
            android:layout_width="95dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:text="0"
            android:textAlignment="center"
            android:textSize="50sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btnponto"
            style="@style/CalculatorButton.Other"
            android:layout_width="95dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:text=","
            android:textAlignment="center"
            android:textSize="50sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn0" />

        <Button
            android:id="@+id/btndel"
            style="@style/CalculatorButton.Other"
            android:layout_width="95dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:text="DEL"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnponto" />

        <Button
            android:id="@+id/btnresultado"
            style="@style/CalculatorButton.Special"
            android:layout_width="95dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:text="="
            android:textSize="50sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btndel" />


        <Button
            android:id="@+id/btn1"
            style="@style/CalculatorButton.Number"
            android:layout_width="95dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:text="1"
            android:textAlignment="center"
            android:textSize="50sp"
            app:layout_constraintBottom_toTopOf="@id/btn0"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btn2"
            style="@style/CalculatorButton.Number"
            android:layout_width="95dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:text="2"
            android:textAlignment="center"
            android:textSize="50sp"
            app:layout_constraintBottom_toTopOf="@id/btn0"
            app:layout_constraintStart_toEndOf="@+id/btn1" />

        <Button
            android:id="@+id/btn3"
            style="@style/CalculatorButton.Number"
            android:layout_width="95dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:text="3"
            android:textAlignment="center"
            android:textSize="50sp"
            app:layout_constraintBottom_toTopOf="@id/btn0"
            app:layout_constraintStart_toEndOf="@+id/btn2" />

        <Button
            android:id="@+id/btnsomar"
            style="@style/CalculatorButton.Operator"
            android:layout_width="95dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:text="+"
            android:textAlignment="center"
            android:textSize="50sp"
            app:layout_constraintBottom_toTopOf="@id/btn0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn3" />

        <Button
            android:id="@+id/btn4"
            style="@style/CalculatorButton.Number"
            android:layout_width="95dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:text="4"
            android:textAlignment="center"
            android:textSize="50sp"
            app:layout_constraintBottom_toTopOf="@id/btn1"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btn5"
            style="@style/CalculatorButton.Number"
            android:layout_width="95dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:text="5"
            android:textAlignment="center"
            android:textSize="50sp"
            app:layout_constraintBottom_toTopOf="@id/btn1"
            app:layout_constraintStart_toEndOf="@+id/btn4" />

        <Button
            android:id="@+id/btn6"
            style="@style/CalculatorButton.Number"
            android:layout_width="95dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:text="6"
            android:textAlignment="center"
            android:textSize="50sp"
            app:layout_constraintBottom_toTopOf="@id/btn1"
            app:layout_constraintStart_toEndOf="@+id/btn5" />

        <Button
            android:id="@+id/btnsubtrair"
            style="@style/CalculatorButton.Operator"
            android:layout_width="95dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:text="-"
            android:textAlignment="center"
            android:textSize="50sp"
            app:layout_constraintBottom_toTopOf="@id/btn1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn6" />

        <Button
            android:id="@+id/btn7"
            style="@style/CalculatorButton.Number"
            android:layout_width="95dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:text="7"
            android:textAlignment="center"
            android:textSize="50sp"
            app:layout_constraintBottom_toTopOf="@id/btn4"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btn8"
            style="@style/CalculatorButton.Number"
            android:layout_width="95dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:text="8"
            android:textAlignment="center"
            android:textSize="50sp"
            app:layout_constraintBottom_toTopOf="@id/btn4"
            app:layout_constraintStart_toEndOf="@+id/btn7" />

        <Button
            android:id="@+id/btn9"
            style="@style/CalculatorButton.Number"
            android:layout_width="95dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:text="9"
            android:textAlignment="center"
            android:textSize="50sp"
            app:layout_constraintBottom_toTopOf="@id/btn4"
            app:layout_constraintStart_toEndOf="@+id/btn8" />

        <Button
            android:id="@+id/btnmultiplicar"
            style="@style/CalculatorButton.Operator"
            android:layout_width="95dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:text="x"
            android:textAlignment="center"
            android:textSize="50sp"
            app:layout_constraintBottom_toTopOf="@id/btn4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn9" />

        <Button
            android:id="@+id/btnlimpar"
            style="@style/CalculatorButton.Special"
            android:layout_width="95dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:text="AC"
            android:textAlignment="center"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@id/btn7"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btnexp"
            style="@style/CalculatorButton.Operator"
            android:layout_width="95dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:text="^"
            android:textAlignment="center"
            android:textSize="50sp"
            app:layout_constraintBottom_toTopOf="@id/btn7"
            app:layout_constraintStart_toEndOf="@+id/btnlimpar" />

        <Button
            android:id="@+id/btnporcento"
            style="@style/CalculatorButton.Operator"
            android:layout_width="95dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:text="%"
            android:textAlignment="center"
            android:textSize="50sp"
            app:layout_constraintBottom_toTopOf="@id/btn7"
            app:layout_constraintStart_toEndOf="@+id/btnexp" />

        <Button
            android:id="@+id/btndividir"
            style="@style/CalculatorButton.Operator"
            android:layout_width="95dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:text="รท"
            android:textAlignment="center"
            android:textSize="50sp"
            app:layout_constraintBottom_toTopOf="@id/btn7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnporcento" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <EditText
        android:id="@+id/display"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textSize="50sp"
        android:maxLines="1"
        android:inputType="text"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/teclado"/>

</androidx.constraintlayout.widget.ConstraintLayout>